@import 'supports/_vars.styl';
.section
	&_main
		.wrapper
			position static
	&_about
		padding 215px 0
		&:before, &:after
			content ''
			position fixed
			height 207px
			width 100%
		&:before
			top 0
			background linear-gradient(0, rgba(255, 255, 255, 0.0001) 0%, #FFFFFF 61.85%, #FFFFFF 100%)
		&:after
			bottom 0
			background linear-gradient(180deg, rgba(255, 255, 255, 0.0001) 0%, #FFFFFF 61.85%, #FFFFFF 100%)
		.wrapper
			position static
	&_why
		.wrapper
			position static
	&_services
		padding 150px 0 210px
		&:before, &:after
			content ''
			position fixed
			height 207px
			width 100%
			z-index 1
		&:before
			top 0
			background linear-gradient(0, rgba(255, 255, 255, 0.0001) 0%, #FFFFFF 61.85%, #FFFFFF 100%)
		&:after
			bottom 0
			background linear-gradient(180deg, rgba(255, 255, 255, 0.0001) 0%, #FFFFFF 61.85%, #FFFFFF 100%)
		
.main
	&-wrap
		display flex
		justify-content space-between
		align-items center
	&-left
		position relative
		max-width 270px
	&-right
		max-width 345px
		.title
			margin-bottom 35px
		p
			font-size 30px
			line-height 45px
	&-title
		font-size 155px
		line-height 100px
		font-weight 700
		word-break break-all
	&-abs
		position absolute
		&-text
			top 220px
			left 196px
			font-size 30px
			line-height 45px
		&-pic
			top 162px
			left -87px
			max-width 205px
			animation rotateSvg 10s linear infinite forwards
			animation-play-state paused
			will-change transform
			&:hover
				animation-play-state running
.about
	&-left
		position fixed
		max-width 379px
		pointer-events none
	&-right 
		margin-left auto
		max-width 360px
		p
			font-size 30px
			line-height 45px
			padding-bottom 98px
			&:last-of-type
				padding-bottom 0
.why
	&-wrap
		display flex
		justify-content space-between
		flex-wrap wrap
		margin-bottom -45px
	&-block
		max-width 400px
		padding-left 55px
		margin-bottom 45px
		h4
			margin-bottom  11px
		p
			color $link-color
	&-top
		position relative
	&-icon
		position absolute
		left -55px
		top 50%
		transform translateY(-50%)
.serv
	&-row
		display flex
		margin-bottom 85px
		&:last-child
			margin-bottom 0
		&_reverse
			flex-direction row-reverse
			.serv
				&-info
					h2
						transform translateX(0px)
					p
						padding-right 80px
						padding-left 0
				&-abs
					left -440px
		
	&-pic
		width 62%
		position relative
		background-repeat no-repeat
		background-size 130% 130%
		overflow hidden
	&-info
		overflow hidden
		width 38%
		padding-top 46px
		h2
			transform translateX(-90px)
			margin-bottom 32px
			white-space nowrap
		p
			padding-left 80px
			color $link-color
	&-abs
		position absolute
		white-space nowrap
		color $title-color
		top 46px
		left calc(100% - 90px)


	
@supports(-webkit-text-stroke: 1px black)
	.serv-abs
		color transparent
		-webkit-text-stroke-width 1px
		-webkit-text-stroke-color $title-color
